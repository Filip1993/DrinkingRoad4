<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/cvPakistan"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="16dp"
                card_view:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivPakikstan"
                    android:src="@drawable/pakistan"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cvBhutan"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="16dp"
                card_view:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivBhutan"
                    android:src="@drawable/bhutan"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cvIsrael"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="16dp"
                card_view:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/ivIsrael"
                    android:layout_height="match_parent"
                    android:src="@drawable/israel"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cvMacedonia"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="16dp"
                card_view:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/ivMacedonia"
                    android:layout_height="match_parent"
                    android:src="@drawable/macedonia"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cvIreland"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="16dp"
                card_view:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivIreland"
                    android:src="@drawable/ireland"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cvCroatia"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="16dp"
                card_view:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/ivCroatia"
                    android:layout_height="match_parent"
                    android:src="@drawable/croatia"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cvBelarus"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="16dp"
                card_view:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivBelarus"
                    android:src="@drawable/belarus"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
